@model IEnumerable<TieTheKnot.Models.VendorInfo>

@{
    ViewData["Title"] = "Index";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rGgo5O9aPd8F5iRwkD3KornhuaxCQ6B9EIoFN3XB+9a6L8x0EZZOqTK/tM6bY4te5" crossorigin="anonymous">

<style>
    /* Custom styles */
    .card {
        margin-bottom: 20px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        transition: box-shadow 0.3s ease-in-out;
    }

        .card:hover {
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
        }

    .card-title {
        color: #333;
    }

    .card-text {
        color: #555;
    }

    .btn {
        margin-top: 10px;
    }
</style>

<h1>Index</h1>

@* <p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p> *@
<div class="container">
    <div class="row">
        @if (Model.Any())
        {
            foreach (var item in Model)
            {
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">@Html.DisplayFor(modelItem => item.VendorName)</h5>
                            <p class="card-text">
                                <strong>GST Number:</strong> @Html.DisplayFor(modelItem => item.GstNumber)<br />
                                <strong>City:</strong> @Html.DisplayFor(modelItem => item.City)<br />
                                <strong>Facility:</strong> @Html.DisplayFor(modelItem => item.Facility)<br />
                                <strong>Charges:</strong> @Html.DisplayFor(modelItem => item.Charges)<br />
                                <strong>Picture Links:</strong> @Html.DisplayFor(modelItem => item.PictureLinks)<br />
                            </p>
                            <a href="@Url.Action("Details", new { id = item.Id })" class="btn btn-info">Details</a>
@*                             <a href="@Url.Action("Edit", new { id = item.Id })" class="btn btn-warning">Edit</a>
 *@                            <a href="@Url.Action("Delete", new { id = item.Id })" class="btn btn-danger">Delete</a>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-md-12">
                <p>No data available</p>
            </div>
        }
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-GLhlTQ8iKs9eqv1H23YPf12L4QVmTlMz9lM7AwiGgGpBhZGNI8a8gNaH66dI5W" crossorigin="anonymous"></script>
