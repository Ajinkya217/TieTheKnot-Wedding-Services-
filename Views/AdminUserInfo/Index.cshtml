@model IEnumerable<TieTheKnot.Models.UserInfo>

@{
    ViewData["Title"] = "Index";
}

<style>
    /* Add your custom CSS styles here */
    .card {
        margin-bottom: 20px;
    }

    .card-header {
        background-color: #007bff;
        color: #fff;
    }
</style>

<h1>Index</h1>

<div class="row">
    <div class="col-md-6">
        <form class="d-flex" asp-action="Index" asp-controller="AdminUserInfo">
            <input name="searchString" class="form-control me-1" type="search" placeholder="Search" aria-label="Search">
            <button class="btn btn-dark" type="submit">Search by name</button>
        </form>
    </div>

    <div class="col-md-6">
        <a asp-action="Index" class="text-dark">Back to full List</a>
    </div>
</div>

@if (Model.Any())
{
    foreach (var item in Model)
    {
        <div class="card">
            <div class="card-header">
                <h5 class="card-title">@Html.DisplayFor(modelItem => item.UserName)</h5>
            </div>
            <div class="card-body">
                <p class="card-text">
                    <strong>Catering Services:</strong> @Html.DisplayFor(modelItem => item.CateringServices)<br />
                    <strong>Decoration:</strong> @Html.DisplayFor(modelItem => item.Decoration)<br />
                    <strong>City:</strong> @Html.DisplayFor(modelItem => item.City)<br />
                    <strong>Photography Services:</strong> @Html.DisplayFor(modelItem => item.PhotographyServices)<br />
                    <strong>Wedding Date:</strong> @Html.DisplayFor(modelItem => item.WeddingDate)<br />
                    <strong>Wedding Venue:</strong> @Html.DisplayFor(modelItem => item.WeddingVenue)<br />
                </p>
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                <a class="btn btn-success" asp-action="Details" asp-route-id="@item.Id">Details</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger ml-2">Delete</a>
            </div>
        </div>
    }
}
else
{
    <p>No data available</p>
}