@model TieTheKnot.Models.VendorInfo

@{
    ViewData["Title"] = "Delete";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewData["Title"]</title>

    <style>
        /* Style for the page container */
        .container {
            max-width: 800px;
            margin: auto;
        }

        /* Style for the header */
        h1 {
            color: #333;
        }

        /* Style for the confirmation message */
        h3 {
            color: #ff0000; /* Red color */
        }

        /* Style for the VendorInfo details */
        dl.row {
            margin-top: 20px;
        }

        dt, dd {
            padding: 5px;
        }

        /* Style for the form */
        form {
            margin-top: 20px;
        }

        /* Style for the submit button */
        .btn-danger {
            background-color: #dc3545; /* Bootstrap's danger color */
            color: #fff;
            border: none;
            padding: 10px 20px;
            text-decoration: none;
            cursor: pointer;
        }

        /* Style for the Back to List link */
        a {
            color: #007bff; /* Bootstrap's primary color */
            text-decoration: none;
            margin-left: 10px;
        }

        /* Style for images in the PictureLinks */
        .col-sm-10 img {
            max-width: 100%;
            height: auto;
            margin-top: 10px;
        }

        /* Add additional styles as needed */
    </style>
</head>
<body>
    <div class="container">
        <h1>Delete</h1>

        <h3>Are you sure you want to delete this?</h3>
        <div>
            <h4>VendorInfo</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.VendorName)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.VendorName)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.GstNumber)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.GstNumber)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.City)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.City)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Facility)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Facility)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Charges)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Charges)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.PictureLinks)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.PictureLinks)
                </dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Delete" class="btn btn-danger" /> |
                <a asp-action="Index">Back to List</a>
            </form>
        </div>
    </div>
</body>
</html>
